<div class=" row justify-content-center">
  <div class="col-8">
    <div class="card show-card text-center">
      <%= form_with(model: @todo, local: true)  do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "form-label float-left mt-1" %><br />
          <%= f.text_field :name, class: "form-control form-decoration", 
                                  placeholder: "Add Name Here" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class:"form-label float-left" %><br />
          <%= f.text_area :description, class: "form-control form-decoration", 
                                        placeholder: "Add Description Here" %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to "Todos List", todos_path, class: "btn btn-warning"%>
        </div>
      <% end %>
    </div>
  </div>
</div> 
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
   
    
 