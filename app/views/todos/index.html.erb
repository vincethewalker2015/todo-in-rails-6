<h1>Todo List</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.name%></td>
      <td><%= todo.description %></td>
      <td><%= link_to "Edit", edit_todo_path(todo) %></td>
      <td><%= link_to "View", todo_path(todo) %></td>
      <td><%= link_to "Delete", todo_path(todo), method: :delete, 
                                              data:{confirm: "Do you want to delete this?"} %></td>
    </tr>
  <% end %>
</table>
